<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <!-- Syncfusion EJ2 WordProcessor for DocumentEditor (includes SFDT support) -->
    <PackageReference Include="Syncfusion.EJ2.WordProcessor.AspNet.Core" Version="27.1.48" />

    <!-- Syncfusion DocIO for DOCX processing -->
    <PackageReference Include="Syncfusion.DocIO.Net.Core" Version="27.1.48" />

    <!-- For JSON serialization -->
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />

    <!-- CORS support -->
    <PackageReference Include="Microsoft.AspNetCore.Cors" Version="2.2.0" />
  </ItemGroup>

</Project>
